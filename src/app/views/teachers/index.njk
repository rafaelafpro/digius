{% extends "layout.njk" %}

{% block content %}
    <div class="card table-teachers">
        <div class="header">
            <a id="new-button" href="/teachers/create"><span>+</span>NOVO</a>
            <form action="/teachers" method='GET'>
                <input value="{{filter}}" name="filter" type="text" placeholder="Filtragem de professores">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        
        
        <table>

            <thead>
                <tr>
                    <th>Professor</th>    
                    <th>Atendimento</th>    
                    <th>Ação</th>
                <tr>

            </thead>

        
        
            <tbody>
                {%for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url('{{teacher.avatar_url}}')"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                            {% for discipline in teacher.subjects_taught %}
                                <span>{{ discipline }}</span>
                            {% endfor %}
                        </td>
                        <td><a href="/teachers/{{teacher.id}}">VER</a>
                    </tr>
                {% endfor %}
            </tbody>

        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        >
        </div>
    </div>
    
{% endblock content %}