{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url('{{ teacher.avatar_url }}') no-repeat center center / cover"></section>
        <section class="info">
            <h3>PROFESSOR</h3>
            <div class="item">
                <div>Nome</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ teacher.level }}</div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{ teacher.type }}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {%for discipline in teacher.disciplines %}
                        <span>{{ discipline }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            

            <a href='/teachers/{{ teacher.id }}/edit'>Editar</a>
        
        </section>

    </div>

{% endblock content %}